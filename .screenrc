escape	"^Tt"                         # ctrl-A default interferes with emacs keybindings for terminal
startup_message off
vbell off
defscrollback 512

# The vt100 description does not mention "dl". *sigh*
termcapinfo vt100 dl=5\E[M

# Hardstatus (update xterm title)
hardstatus string "SCREEN @ %H: %-n - %t"

caption always "%{bc}%c | %m-%d %D | %H%{+u wb} %L=%-Lw%45>%{bw}%n%f* %t%{-}%+Lw%-0<"

